      <h3 id="pageTitle">Part Search</h3>

      <div class="container">
        <div class="row">
            <div class="col-sm">
                <h3 id="enterh3">Enter Part</h3>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">#</span>
                    </div>
                    <input id="partSearchInput" type="number" class="form-control" placeholder="123456789" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <p id="noPartErrorBox"></p>
                <button type="button" id="partSearchButton" class="btn btn-primary">Search</button>
                <hr/>
                <h4 id="partIDField">Part ID: </h4>
                <br>
